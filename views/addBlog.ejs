<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs') %>
    <title>Add Blog</title>
  </head>
  <body>
    <%- include('./partials/nav.ejs') %> <%- JSON.stringify(user) %>

    <div class="container mt-3">
      <form action="/blog" method="post" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="title" class="form-title">Title</label>
          <input
            type="text"
            class="form-control"
            id="title"
            name="title"
            namaria-describedby="title"
          />
        </div>

        <div class="mb-3">
          <label for="body" class="form-title">Body</label>
          <textarea class="form-control" id="body" name="body"></textarea>
        </div>

        <div class="mb-3">
            <label for="coverImage" class="form-title">CoverImage</label>
            <input
              type="file"
              class="form-control"
              id="coverImage"
              name="coverImage"
              namaria-describedby="coverImage"
            />
          </div>

          <div class="mb-3">
            <button class="btn btn-primary">Submit</button>
          </div>
  
      </form>
    </div>

    <%- include('./partials/scripts.ejs') %>
  </body>
</html>
